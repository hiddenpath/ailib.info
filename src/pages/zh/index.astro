    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta property="og:title" content="ai-lib – 统一的多提供商 Rust AI SDK" />
    <meta property="og:description" content="统一多提供商、流式、函数调用、可靠性、模型策略与可观测性。" />
    <meta property="og:image" content="/og-image.png" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <Hero locale={locale} />
    <ValueProps locale={locale} />
    <Install locale={locale} />
    <Providers locale={locale} />
    <Performance locale={locale} />
    <Architecture locale={locale} />
    <Roadmap locale={locale} />
    <Support locale={locale} />
    <FAQ locale={locale} />
    <Footer locale={locale} />
  </body>
</html>