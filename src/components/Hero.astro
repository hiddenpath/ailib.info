---
const { locale = 'en' } = Astro.props;
const isZh = locale === 'zh';

const heroContent = {
  en: {
    badge: 'Ecosystem v0.4.0',
    title: 'AI-Protocol Ecosystem',
    subtitle: 'One specification, multiple runtimes.',
    description: 'Unified AI model interaction across Protocol, Rust, and Python.',
    ctas: [
      { text: '★ Protocol Spec', link: 'https://github.com/hiddenpath/ai-protocol', primary: true },
      { text: 'Rust Runtime', link: '/rust/quick-start/', primary: false },
      { text: 'Python Runtime', link: '/python/quick-start/', primary: false },
    ],
    footer: 'Dual-licensed MIT/Apache-2.0 · Protocol-driven design · Vendor neutral'
  },
  zh: {
    badge: '生态发布 v0.4.0',
    title: 'AI-Protocol 生态系统',
    subtitle: '一个规范，多个运行时。',
    description: '统一的 AI 模型交互方式，支持协议层、Rust 和 Python 实现。',
    ctas: [
      { text: '★ 协议文档', link: 'https://github.com/hiddenpath/ai-protocol', primary: true },
      { text: 'Rust 运行时', link: '/rust/quick-start/', primary: false },
      { text: 'Python 运行时', link: '/python/quick-start/', primary: false },
    ],
    footer: '双许可证 MIT/Apache-2.0 · 协议驱动设计 · 无供应商锁定'
  }
};

const content = isZh ? heroContent.zh : heroContent.en;
---

<section style="padding-top:120px;">
  <div style="position:relative;">
    <span class="badge">{content.badge}</span>

    <h1 style="margin:18px 0 20px; font-size:48px; max-width:820px;">
      {content.title}
    </h1>

    <p class="subtitle" style="font-size:24px; font-weight:500; color:var(--color-accent); margin:0 0 12px;">
      {content.subtitle}
    </p>

    <p style="font-size:20px; max-wide:860px; color:var(--text-dim); margin:0 0 28px;">
      {content.description}
    </p>

    <div class="btn-row">
      {content.ctas.map((cta, index) => (
        <a
          class={`button ${cta.primary ? 'primary' : 'secondary'}`}
          href={cta.link}
          target={cta.link.startsWith('http') ? '_blank' : undefined}
          rel={cta.link.startsWith('http') ? 'noopener' : undefined}
        >
          {cta.text}
        </a>
      ))}
    </div>

    <p style="margin-top:26px; font-size:13px; color:var(--text-dim);">
      {content.footer}
    </p>
  </div>
</section>

<style>
  .subtitle {
    font-weight: 500;
    color: var(--color-accent, #3b82f6);
  }

  .btn-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .button.primary {
    background: linear-gradient(135deg, #0a2540 0%, #1a3a5c 100%);
    color: white;
    border: none;
  }

  .button.secondary {
    background: white;
    color: var(--color-primary, #0a2540);
    border: 2px solid var(--color-primary-light, #1a3a5c);
  }
</style>