---
const { locale = 'en' } = Astro.props;
const isZh = locale === 'zh';

const heroContent = {
  en: {
    badge: 'Ecosystem v0.5.0',
    title: 'AI-Protocol Ecosystem',
    subtitle: 'One specification, multiple runtimes.',
    description: 'Unified AI model interaction across Protocol, Rust, and Python.',
    ctas: [
      { text: '★ Protocol Spec', link: 'https://github.com/hiddenpath/ai-protocol', primary: true },
      { text: 'Rust Runtime', link: '/rust/quick-start/', primary: false },
      { text: 'Python Runtime', link: '/python/quick-start/', primary: false },
    ],
    footer: 'Dual-licensed MIT/Apache-2.0 · Protocol-driven design · Vendor neutral'
  },
  zh: {
    badge: '生态发布 v0.5.0',
    title: 'AI-Protocol 生态系统',
    subtitle: '一个规范，多个运行时。',
    description: '统一的 AI 模型交互方式，支持协议层、Rust 和 Python 实现。',
    ctas: [
      { text: '★ 协议文档', link: 'https://github.com/hiddenpath/ai-protocol', primary: true },
      { text: 'Rust 运行时', link: '/rust/quick-start/', primary: false },
      { text: 'Python 运行时', link: '/python/quick-start/', primary: false },
    ],
    footer: '双许可证 MIT/Apache-2.0 · 协议驱动设计 · 无供应商锁定'
  }
};

const content = isZh ? heroContent.zh : heroContent.en;
---

<section class="relative pt-32 pb-20 overflow-hidden">
  <!-- Dynamic Background Decorations -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full pointer-events-none -z-10 bg-[radial-gradient(circle_at_50%_0%,rgba(59,130,246,0.1),transparent_50%)]"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 mb-6 border border-blue-200 dark:border-blue-800">
        <span class="relative flex h-2 w-2 mr-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        {content.badge}
      </span>

      <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-slate-900 dark:text-white mb-6 leading-[1.1]">
        {content.title}
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 mt-2">
          {content.subtitle}
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 mb-10 max-w-2xl leading-relaxed">
        {content.description}
      </p>

      <div class="flex flex-wrap gap-4 mb-8">
        {content.ctas.map((cta) => (
          <a
            href={cta.link}
            target={cta.link.startsWith('http') ? '_blank' : undefined}
            rel={cta.link.startsWith('http') ? 'noopener' : undefined}
            class={`px-8 py-4 rounded-xl font-semibold transition-all duration-200 transform hover:-translate-y-0.5 active:scale-95 flex items-center shadow-lg hover:shadow-xl ${
              cta.primary 
                ? 'bg-blue-600 text-white hover:bg-blue-700 shadow-blue-500/25' 
                : 'bg-white dark:bg-slate-800 text-slate-900 dark:text-white border border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-700/50 shadow-slate-200/20 dark:shadow-none'
            }`}
          >
            {cta.text}
            {cta.primary && (
              <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            )}
          </a>
        ))}
      </div>

      <div class="flex items-center text-sm text-slate-500 dark:text-slate-500 font-medium">
        <svg class="w-5 h-5 mr-2 text-blue-500/50" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        {content.footer}
      </div>
    </div>
  </div>
</section>