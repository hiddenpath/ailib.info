---
const { locale = 'en' } = Astro.props;

const content: Record<string, any> = {
  en: {
    badge: 'Open Source Ecosystem',
    title: 'One Protocol,',
    titleHighlight: 'Every AI Provider.',
    subtitle: 'AI-Lib is an open-source ecosystem that standardizes AI model interactions. V2 protocol with MCP, Computer Use, and multimodal capabilities — 37 providers, three runtimes, zero hardcoded logic.',
    cta1: 'Get Started',
    cta2: 'View on GitHub',
    stats: [
      { value: '37', label: 'AI Providers' },
      { value: '5', label: 'Projects' },
      { value: '0', label: 'Hardcoded Logic' },
      { value: '3', label: 'Runtimes' },
    ],
  },
  'zh-cn': {
    badge: '开源生态系统',
    title: '一套协议，',
    titleHighlight: '统一所有 AI 服务商。',
    subtitle: 'AI-Lib 是一个开源生态系统，标准化 AI 模型交互方式。V2 协议支持 MCP、Computer Use、多模态三大能力——37 个服务商，三运行时，零硬编码逻辑。',
    cta1: '快速开始',
    cta2: '查看 GitHub',
    stats: [
      { value: '37', label: 'AI 服务商' },
      { value: '5', label: '核心项目' },
      { value: '0', label: '硬编码逻辑' },
      { value: '3', label: '语言运行时' },
    ],
  },
  ja: {
    badge: 'オープンソースエコシステム',
    title: 'ワンプロトコル、',
    titleHighlight: 'すべてのAIプロバイダー。',
    subtitle: 'AI-Lib はAIモデルのインタラクションを標準化するオープンソースエコシステムです。V2プロトコルでMCP、Computer Use、マルチモーダルをサポート — 37プロバイダー、3つのランタイム、ハードコードロジックゼロ。',
    cta1: '始めましょう',
    cta2: 'GitHub で見る',
    stats: [
      { value: '37', label: 'AIプロバイダー' },
      { value: '5', label: 'プロジェクト' },
      { value: '0', label: 'ハードコード' },
      { value: '3', label: 'ランタイム' },
    ],
  },
  es: {
    badge: 'Ecosistema de código abierto',
    title: 'Un protocolo,',
    titleHighlight: 'todos los proveedores de IA.',
    subtitle: 'AI-Lib es un ecosistema de código abierto que estandariza las interacciones con modelos de IA. Protocolo V2 con MCP, Computer Use y multimodal — 37 proveedores, tres runtimes, cero lógica hardcodeada.',
    cta1: 'Comenzar',
    cta2: 'Ver en GitHub',
    stats: [
      { value: '37', label: 'Proveedores IA' },
      { value: '5', label: 'Proyectos' },
      { value: '0', label: 'Lógica hardcodeada' },
      { value: '3', label: 'Runtimes' },
    ],
  },
};

const c = content[locale] || content.en;
const prefix = locale === 'en' ? '' : `/${locale}`;
---

<section class="relative overflow-hidden pt-16 pb-20 md:pt-24 md:pb-28">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
    <div class="absolute top-20 right-1/4 w-80 h-80 bg-purple-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/2 w-72 h-72 bg-emerald-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container">
    <div class="max-w-4xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-medium bg-[var(--accent)]/10 text-[var(--accent)] border border-[var(--accent)]/20 mb-8">
        <span class="w-1.5 h-1.5 rounded-full bg-[var(--accent)] animate-pulse"></span>
        {c.badge}
      </div>

      <!-- Title -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6 leading-[1.05]">
        <span class="text-[var(--text)]">{c.title}</span>
        <br />
        <span class="gradient-text">{c.titleHighlight}</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-[var(--text-dim)] max-w-2xl mb-10 leading-relaxed">
        {c.subtitle}
      </p>

      <!-- CTAs -->
      <div class="flex flex-wrap gap-4 mb-16">
        <a
          href={`${prefix}/intro/`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--accent)] text-white font-semibold rounded-lg hover:brightness-110 transition-all shadow-lg shadow-blue-500/20 hover:shadow-blue-500/30 hover:no-underline"
        >
          {c.cta1}
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a
          href="https://github.com/hiddenpath"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--bg-alt)] text-[var(--text)] font-semibold rounded-lg border border-[var(--border)] hover:border-[var(--border-light)] transition-all hover:no-underline"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {c.cta2}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {c.stats.map(stat => (
          <div class="text-center md:text-left">
            <div class="text-3xl md:text-4xl font-extrabold gradient-text mb-1">{stat.value}</div>
            <div class="text-sm text-[var(--text-muted)] font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
