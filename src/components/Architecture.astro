<script>
  // Lightbox enlarge
  const thumb = document.currentScript.previousElementSibling.querySelector('[data-enlarge]');
  if (thumb) {
    function open() {
      const src = thumb.querySelector('img').getAttribute('src');
      const overlay = document.createElement('div');
      overlay.className = 'arch-lightbox';
      overlay.innerHTML = `<div class="inner"><img src="${src}" alt="architecture" /><button class="close" aria-label="close">âœ•</button></div>`;
      document.body.appendChild(overlay);
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay || e.target.classList.contains('close')) overlay.remove();
      });
      window.addEventListener('keydown', function esc(e) {
        if (e.key === 'Escape') {
          overlay.remove();
          window.removeEventListener('keydown', esc);
        }
      });
    }
    thumb.addEventListener('click', (e) => {
      if (e.target.closest('.zoom-btn') || e.target.tagName === 'IMG') open();
    });
  }
</script>

