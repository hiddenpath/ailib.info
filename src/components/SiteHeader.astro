---
import LanguagePicker from './LanguagePicker.astro';

const { locale = 'en' } = Astro.props;

const navLabels: Record<string, Record<string, string>> = {
  en:    { protocol: 'Protocol', rust: 'Rust SDK', python: 'Python SDK', ts: 'TS SDK', docs: 'Docs' },
  'zh-cn': { protocol: '协议',     rust: 'Rust SDK', python: 'Python SDK', ts: 'TS SDK', docs: '文档' },
  ja:    { protocol: 'プロトコル', rust: 'Rust SDK', python: 'Python SDK', ts: 'TS SDK', docs: 'ドキュメント' },
  es:    { protocol: 'Protocolo', rust: 'Rust SDK', python: 'Python SDK', ts: 'TS SDK', docs: 'Docs' },
};

const t = navLabels[locale] || navLabels.en;
const prefix = locale === 'en' ? '' : `/${locale}`;

const nav = [
  { label: t.protocol, href: `${prefix}/protocol/` },
  { label: t.rust,     href: `${prefix}/rust/` },
  { label: t.python,   href: `${prefix}/python/` },
  { label: t.ts,       href: `${prefix}/ts/` },
  { label: t.docs,     href: `${prefix}/intro/` },
];
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-[var(--bg)]/80 border-b border-[var(--border)]">
  <div class="container flex items-center justify-between h-16">
    <a href={locale === 'en' ? '/' : `/${locale}/`} class="flex items-center gap-3 text-[var(--text)] hover:no-underline group">
      <svg class="w-8 h-8 shrink-0" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" aria-label="AI-Lib">
        <path fill="#1f5fbf" d="M100 66l-16 9-1 25-8 7-2 30 27 20 27-20-2-30-8-7-1-25z" />
        <g stroke="currentColor" stroke-width="5" stroke-linecap="round" stroke-linejoin="round" fill="none">
          <path d="M90 95 60 66 75 22" />
          <path d="M90 95 46 78 46 40" />
          <path d="M90 95 40 110 40 155" />
          <path d="M90 95 55 128 75 180" />
          <path d="M95 60 95 70" />
          <g transform="translate(200 0) scale(-1 1)">
            <path d="M90 95 60 66 75 22" />
            <path d="M90 95 46 78 46 40" />
            <path d="M90 95 40 110 40 155" />
            <path d="M90 95 55 128 75 180" />
            <path d="M95 60 95 70" />
          </g>
        </g>
      </svg>
      <span class="font-bold text-lg tracking-tight">AI-Lib</span>
    </a>

    <nav class="hidden md:flex items-center gap-1">
      {nav.map(item => (
        <a
          href={item.href}
          class="px-4 py-2 text-sm font-medium text-[var(--text-dim)] hover:text-[var(--text)] hover:bg-[var(--bg-alt)] rounded-lg transition-all hover:no-underline"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3">
      <LanguagePicker />
      <a
        href="https://github.com/hiddenpath"
        target="_blank"
        rel="noopener"
        class="p-2 text-[var(--text-dim)] hover:text-[var(--text)] transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</header>

<div class="h-16"></div>
